<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.conference_android.app" >

    <application
        android:name="com.example.conference_android.app.ConferenceApplication"
        android:allowBackup="true"
        android:logo="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Googleio" >
        <activity
            android:name="com.example.conference_android.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventLeaderActivity"
            android:label="@string/title_activity_eventleader" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
