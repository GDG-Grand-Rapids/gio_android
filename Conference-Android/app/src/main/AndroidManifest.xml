<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.conference_android.app" >

    <application
        android:name="com.example.conference_android.app.ConferenceApplication"
        android:allowBackup="true"
        android:logo="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Googleio" >
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.activities.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.EventDetailActivity"
            android:label="@string/title_activity_eventdetail"
            android:parentActivityName=".ui.activities.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.conference_android.app.MainActivity" />>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
