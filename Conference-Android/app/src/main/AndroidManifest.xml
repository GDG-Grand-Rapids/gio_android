<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.conference_android.app" >

    <application
        android:name="com.example.conference_android.app.ConferenceApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:logo="@drawable/icon"
        android:theme="@style/Theme.Googleio" >
        <activity
            android:name="com.example.conference_android.app.ui.activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.conference_android.app.ui.activities.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.conference_android.app.ui.activities.EventDetailActivity"
            android:label="@string/title_activity_eventdetail"
            android:parentActivityName="com.example.conference_android.app.ui.activities.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.conference_android.app.MainActivity" />
>
        </activity>


        <activity
            android:name="com.example.conference_android.app.ui.activities.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:parentActivityName="com.example.conference_android.app.ui.activities.SplashActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.conference_android.app.SplashActivity" />

        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
