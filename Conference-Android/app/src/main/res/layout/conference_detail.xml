<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/conferenceImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/conference_detail_image_layout_height"
        android:transitionName="@string/transition_conference_image"
        android:scaleType="center" />

    <TextView
        android:id="@+id/txtConferenceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/conference_detail_title_background"
        android:padding="@dimen/conference_detail_conf_name_padding"
        tools:text="Google I/O"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtConferenceDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/conference_detail_title_background"
        android:padding="@dimen/conference_detail_conf_name_padding"
        tools:text="May 23 - 24 2015"
        android:textColor="@color/white" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtConferenceFullDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/conference_detail_padding"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In eleifend, odio a vehicula venenatis, nisi nisi commodo arcu, a iaculis nunc purus non orci. Maecenas ac tempor enim. Pellentesque vel enim arcu. Nunc aliquet augue sed consectetur posuere. Mauris congue quam id neque dictum, sed placerat nunc ullamcorper. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Aenean maximus fermentum odio, placerat placerat turpis aliquet eu. Duis finibus tristique mauris vel malesuada. Donec nec ipsum sem." />

            <TextView
                android:id="@+id/txtThankSponsorsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/conference_detail_marginLeft"
                android:text="Thank you to our sponsors" />

            <TextView
                android:id="@+id/txtPlatinumSponsors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/conference_detail_marginLeft"
                android:layout_marginTop="@dimen/conference_detail_marginTop"
                android:text="Plantinum Sponsors"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="15dp"
                android:background="@color/conference_detail_title_background" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_logo_spectrum"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_logo_spindance"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_logo_bravolt"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtGoldSponsors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/conference_detail_marginLeft"
                android:layout_marginTop="@dimen/conference_detail_marginTop"
                android:text="Gold Sponsors"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="15dp"
                android:background="@color/conference_detail_title_background" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_logo_gfs"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_logo_gvsu"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_logo_grcurrent"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_logo_teksystems"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtSilverSponsors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/conference_detail_marginLeft"
                android:layout_marginTop="@dimen/conference_detail_marginTop"
                android:text="Silver Sponsors"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="15dp"
                android:background="@color/conference_detail_title_background" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_logo_amway"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-35dp"
                android:layout_marginTop="-35dp"
                android:src="@drawable/ic_logo_ost"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_logo_kforce"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_logo_steelcase"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:src="@drawable/ic_logo_atomic"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtBronzeSponsors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/conference_detail_marginLeft"
                android:layout_marginTop="@dimen/conference_detail_marginTop"
                android:text="Bronze Sponsors"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="15dp"
                android:background="@color/conference_detail_title_background" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_logo_softwaregr"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
