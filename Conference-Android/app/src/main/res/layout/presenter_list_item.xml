<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lindsay Mikita"
            android:textSize="16dp"
            android:id="@+id/txtPresenterName"
            android:layout_marginLeft="@dimen/conference_detail_marginLeft"
            android:layout_marginTop="5dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/conference_detail_title_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amway"
            android:layout_marginTop="2dp"
            android:id="@+id/txtPresenterCompany"
            android:layout_below="@+id/txtPresenterName"
            android:layout_marginLeft="@dimen/conference_detail_marginLeft"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean vel lectus fermentum turpis porta aliquam. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce eu elit ligula. Nunc vehicula mauris."
            android:id="@+id/txtBio"
            android:layout_below="@+id/txtPresenterCompany"
            android:layout_marginLeft="@dimen/conference_detail_marginLeft"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            />

    </RelativeLayout>
</LinearLayout>
